@using Examples.Models
@model EmployeeViewModel

<form  asp-controller="Home" asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>

    <label asp-for="FirstName"></label>
    <input type="text" asp-for="FirstName"  />
    <span asp-validation-for="FirstName"></span><br />

    <label asp-for="Email"></label>
    <input type="text" asp-for="Email"  />
    <span asp-validation-for="Email"></span><br />

    <label asp-for="BlogUrl"></label>
    <input type="text" asp-for="BlogUrl" />
    <span asp-validation-for="BlogUrl"></span><br />

    <label asp-for="MobileNo"></label>
    <input type="text" asp-for="MobileNo" />
    <span asp-validation-for="MobileNo"></span><br />

    <label asp-for="Password"></label>
    <input type="text" asp-for="Password" />
    <span asp-validation-for="Password"></span><br />

    <label asp-for="BirthDate"></label>
    <input type="text" asp-for="BirthDate" asp-format="{0:dd/MM/yyyy}" />
    <span asp-validation-for="BirthDate"></span><br />

    <label asp-for="Salary"></label>
    <input type="text" asp-for="Salary" asp-format="{0:0.00}"/>
    <span asp-validation-for="Salary"></span><br />

    <label asp-for="Notes"></label>
    <textarea asp-for="Notes"></textarea>
    <span asp-validation-for="Notes"></span><br />

    <label asp-for="Title"></label>
    <select asp-for="Title" asp-items="Model.GetTitles()">
        <option value="">--select--</option>
    </select><br />

    <label asp-for="Interests"></label>
    <select asp-for="Interests" asp-items="Model.GetInterests()">
    </select><br />

    <label asp-for="Gender"></label>
    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
        <option value="" selected>--select--</option>
    </select>
    <br />

    <br />
    <button type="submit">Save</button><br />

    <a asp-controller="Home" asp-action="Echo" asp-route-id="@Model.Id">Echo</a>
    <a asp-route="namedRoute" asp-route-id="@Model.Id">Call Named Route</a>
    <a asp-host="baidu.com" asp-protocol="http">Blog</a>
</form>