@{ 
    var isHungry = true;
    var gender = 0;
    IEnumerable<string> friends = new[] { "Thor", "tohm", "Iron"};
    var tech = "asp.net mvc";
    var count = tech.Count();
}

@if (isHungry)
{
    <p>I'm hungry</p>

}else {
    <p>I'm fine</p>
}

@switch (gender)
{
    case 0:
        <p>Male</p>
        break;
    case 1:
        <p>Female</p>
        break;
    default:
        break;
}

@for(int i=0; i<tech.Length; i++)
{
    <text>@tech[i].ToString().ToUpper()</text>

}

<ul>
    @foreach(var item in friends)
    {
        <li>@item</li>

    }
</ul>

@do
{
    <text>@tech[count - 1].ToString().ToUpper()</text>
    count -= 1;
} while (count > 0);

@try
{
    var a = 1;
    var b = 0;
    var result = a / b;
}
catch(Exception ex)
{
    <p>@ex.Message</p>
}